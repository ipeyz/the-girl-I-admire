    <script>
        // --- Tone.js Music Logic ---

        // Define the instruments and effects
        let synth = new Tone.PolySynth(Tone.Synth, {
            oscillator: { type: 'sine' },
            envelope: {
                attack: 1,
                decay: 0.5,
                sustain: 0.5,
                release: 2,
            }
        }).toDestination();
        
        // Add a soft reverb for atmosphere
        const reverb = new Tone.Reverb(2).toDestination();
        synth.connect(reverb);

        // Tempo for a slow, romantic feel
        Tone.Transport.bpm.value = 80;

        // Define a simple, soothing A minor chord progression (A5 - Fmaj7 - C - G)
        const notes = [
            ["A3", "C4", "E4"],  // Am
            ["F3", "A3", "C4"],  // F
            ["G3", "B3", "D4"],  // G
            ["C3", "E3", "G3"]   // C
        ];

        // Create a sequence that repeats the chords
        let sequence = new Tone.Sequence((time, chordIndex) => {
            // Play the chord
            const chord = notes[chordIndex % notes.length];
            synth.triggerAttackRelease(chord, "2n", time);

            // Simple arpeggiation/melody line using the notes of the chord
            const melodyNote = chord[chordIndex % chord.length];
            synth.triggerAttackRelease(melodyNote, "8n", time + Tone.Time("4n").toSeconds());
        }, [0, 1, 2, 3], "4n").start(0); // Sequence of indices 0, 1, 2, 3 playing every quarter note

        // Function to be called when the user clicks the overlay
        function startExperience() {
            // Start the audio context and transport (music)
            if (Tone.context.state !== 'running') {
                Tone.start();
            }
            Tone.Transport.start();

            // Hide the overlay gracefully
            const overlay = document.getElementById('startButtonOverlay');
            overlay.style.opacity = 0;
            
            // Remove the overlay from the DOM after transition
            setTimeout(() => {
                overlay.remove();
            }, 1500); 
        }

        // The sequence will loop automatically by default in Tone.js
        sequence.loop = true;
        sequence.loopEnd = "4m"; // Loop every 4 measures
    </script>
